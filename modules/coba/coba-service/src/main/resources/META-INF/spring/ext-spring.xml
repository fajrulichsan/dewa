<?xml version="1.0"?>

<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    default-destroy-method="destroy"
    default-init-method="afterPropertiesSet">

    <!-- Use External DataSource from portal-ext.properties -->
    <bean id="liferayDataSourceImpl" class="com.liferay.portal.dao.jdbc.spring.DataSourceFactoryBean">
        <property name="propertyPrefix" value="jdbc.dewa." />
    </bean>

    <bean id="liferayDataSource" class="org.springframework.jdbc.datasource.LazyConnectionDataSourceProxy">
        <property name="targetDataSource" ref="liferayDataSourceImpl" />
    </bean>

    <!-- Alias for service.xml data-source attribute -->
    <alias name="liferayDataSource" alias="dewaDataSource" />

</beans>
